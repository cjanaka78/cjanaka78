<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dice Roll" Height="350" Width="525">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Name="textBlockNumberOfRolls" Text="Number of Rolls" VerticalAlignment="Top" Margin="12,12,0,0" Width="123" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="132,12,0,0" Name="textBoxNumberOfRolls" VerticalAlignment="Top" Width="120" TextChanged="textBoxNumberOfRolls_TextChanged" />
        <Button Content="Roll Dice" Height="23" HorizontalAlignment="Left" Margin="333,12,0,0" Name="buttonRollDice" VerticalAlignment="Top" Width="115" Click="buttonRollDice_Click" DataContext="{Binding}" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,52,0,0" Name="textBlockDiceTotal" Text="Dice Total" VerticalAlignment="Top" Width="64" />
        <TextBlock Height="23" HorizontalAlignment="Right" Margin="0,52,299,0" Name="textBlockNumOfTimes" Text="# of times" VerticalAlignment="Top" Width="101" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="210,52,0,0" Name="textBlockPercentageofTimes" Text="% of times" VerticalAlignment="Top" Width="79" />
    </Grid>
</Window>
